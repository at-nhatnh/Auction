<%= form_for campaign, class: 'form-horizontal' do |f| %>
  <% if campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
      <% campaign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :product_id, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.collection_select :product_id, @products, :id, :title, { prompt: true }, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :time, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :time, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
